@model SimpleStudentElections.Models.Election

<div class="modal fade" id="new-election-entry" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New election entry</h5>
                <button type="button" class="close disable-during-request" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="error-container"></div>

                <form>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Election</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" value="@Model.Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Student ID</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control student-id-input disable-during-request">
                        </div>
                    </div>
                </form>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary disable-during-request" data-dismiss="modal">
                    Discard and close form
                </button>
                <button type="button" class="btn btn-success confirm-button disable-during-request">
                    Create
                </button>
            </div>
        </div>
    </div>
</div>
